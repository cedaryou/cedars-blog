---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A simple personal blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <h1 class="site-title"><a href="/">cedar's blog</a></h1>
      <nav class="site-nav">
        <a href="/">home</a>
        <a href="/about">about</a>
        <a href="/subscribe">subscribe</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>&copy; {new Date().getFullYear()} cedar's blog</p>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
